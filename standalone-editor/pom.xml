    </dependency>

    <dependency>
      <groupId>org.uberfire</groupId>
      <artifactId>uberfire-experimental-backend</artifactId>
    </dependency>

    <dependency>
      <groupId>org.uberfire</groupId>
      <artifactId>uberfire-experimental-client</artifactId>
      <scope>provided</scope>
